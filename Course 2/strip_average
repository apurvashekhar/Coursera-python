fname = input("Enter file name: ")
fh = open(fname)
count = 0
s= 0
for line in fh:
    if not line.startswith("X-DSPAM-Confidence:") :continue
    line = line.replace("X-DSPAM-Confidence:","")
    line = line.strip()
    s = s+ float(line)
    count = count + 1
    avg = s/count
print ('Average spam confidence:', avg)
    
