fname = input("Enter file name: ")
fh = open(fname)
count = 0
for line in fh:
    if not line.startswith('From '): continue
    count = count + 1
    line = line.strip()
    if not line.startswith('From '):
        continue
    words = line.split()
    print (words[1])
    continue
print ("There were", count , "lines in the file with From as the first word")
